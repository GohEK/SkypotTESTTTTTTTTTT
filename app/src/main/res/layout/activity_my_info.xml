<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueLight">

    <RelativeLayout
        android:id="@+id/tv_my_info1"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/refresh"
            android:textColor="@color/colorBlue" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="返回"
            android:textColor="@color/colorBlue"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_my_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="@color/colorBlue"
            android:textSize="40sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_my_info1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="用户账号:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_my_info1"
        android:layout_marginStart="170dp"
        android:layout_marginTop="40dp"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_number"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="用户姓名:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_number"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暂未填写"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_name"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="用户专业:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_major"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_name"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暂未填写"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_major"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="联系方式:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_major"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暂未填写"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_phone"
        android:layout_marginStart="65dp"
        android:layout_marginTop="10dp"
        android:text="QQ号:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_phone"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暂未填写"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_qq"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="宿舍地址:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_qq"
        android:layout_marginStart="170dp"
        android:layout_marginTop="10dp"
        android:text="暂未填写"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_stu_address"
        android:gravity="center">

        <Button
            android:id="@+id/btn_modify_info"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_login"
            android:text="修改"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_cancel"
            android:text="返回"
            android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>